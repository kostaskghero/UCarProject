<?xml version="1.0" encoding="UTF-8" ?>
<!-- 타일즈 설정파일 -->
 <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
 <!-- 컨트롤러에서 view name을 아래의 layout-tiles 라는 definition name을
 	   명시하면 아래의 페이지들이 조합된(include) 결과화면을 제공한다
  -->
  <!-- 검색, 예약 부분 뷰 정리 필요 -->
<tiles-definitions>
	<definition name="sharing_*" extends="member_*">
		<put-attribute name="left" value="/WEB-INF/views/sharing/left.jsp" />
		<put-attribute name="main" value="/WEB-INF/views/sharing/{1}.jsp" />
	</definition>	
</tiles-definitions>
















